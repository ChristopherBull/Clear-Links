{
  "name": "clear-links-dev-tools",
  "version": "1.0.0",
  "description": "Dev tooling for the Clear Links browser extension",
  "author": "Christopher Bull",
  "type": "module",
  "scripts": {
    "build": "make",
    "lint": "npm run lint-md && npm run lint-css && npm run lint-src",
    "lint-css": "stylelint \"src/**/*.css\"",
    "lint-md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint-src": "eslint src test",
    "spell": "cspell README.md \"/src/*.*\"",
    "test": "npm run build && cross-env NODE_ENV=test mocha",
    "test-all": "npm run lint && npm run test-coverage && npm run spell && npm run test:e2e",
    "test-coverage": "npm run build && cross-env NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcovonly mocha",
    "test:e2e": "npx playwright test",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:start-server": "npx http-server ./test/test-sites",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@html-eslint/eslint-plugin": "^0.23.1",
    "@html-eslint/parser": "^0.23.0",
    "@playwright/test": "^1.44.0",
    "@stylistic/eslint-plugin": "^1.5.4",
    "@stylistic/stylelint-plugin": "^2.0.0",
    "@types/node": "^20.12.12",
    "chai": "^5.0.0",
    "cross-env": "^7.0.3",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-css": "^0.9.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.2",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "markdownlint-cli2": "^0.12.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "semantic-release": "^23.0.8",
    "semantic-release-chrome": "^3.2.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
