{
  "name": "clear-links-dev-tools",
  "version": "1.0.0",
  "description": "Dev tooling for the Clear Links browser extension",
  "author": "Christopher Bull",
  "type": "module",
  "scripts": {
    "build": "make",
    "build:package:ff": "web-ext build --source-dir dist/firefox --overwrite-dest",
    "lint": "npm run lint:md && npm run lint:css && npm run lint:src && make build_ff_only && npm run lint:web-ext:ff",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!docs/test-results\" \"!dist\" \"!swark-output\"",
    "lint:src": "eslint src test",
    "lint:web-ext:ff": "web-ext lint --source-dir ./dist/firefox/",
    "spell": "cspell .",
    "test": "npm run lint && npm run test:unit:coverage && npm run spell && npm run test:e2e",
    "test:unit": "npm run build && cross-env NODE_ENV=test mocha test/specs/**/*.test.js",
    "test:unit:coverage": "npm run build && cross-env NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcovonly mocha test/specs/**/*.test.js",
    "test:e2e": "npx playwright test",
    "test:e2e:prepare": "npx playwright install --with-deps chromium firefox",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:start-server": "npx http-server ./test/test-sites",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@html-eslint/eslint-plugin": "^0.40.0",
    "@html-eslint/parser": "^0.40.0",
    "@playwright/test": "^1.55.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.0",
    "eslint": "^9.26.0",
    "eslint-plugin-css": "^0.11.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-mocha": "^11.0.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "markdownlint-cli2": "^0.18.1",
    "mocha": "^11.2.2",
    "monocart-reporter": "^2.9.18",
    "nyc": "^17.1.0",
    "semantic-release": "^24.2.7",
    "semantic-release-amo": "^2.0.0",
    "semantic-release-chrome": "^3.2.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "web-ext": "^8.9.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
