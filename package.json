{
  "name": "clear-links-dev-tools",
  "version": "1.0.0",
  "description": "Dev tooling for the Clear Links browser extension",
  "author": "Christopher Bull",
  "type": "module",
  "scripts": {
    "build": "make",
    "lint": "npm run lint-md && npm run lint-css && npm run lint-src",
    "lint-css": "stylelint \"src/**/*.css\"",
    "lint-md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint-src": "eslint src test",
    "spell": "cspell README.md \"/src/*.*\"",
    "test": "cross-env NODE_ENV=test mocha",
    "test-all": "npm run lint && npm run test-coverage && npm run spell",
    "test-coverage": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcovonly mocha"
  },
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.22.0",
    "@html-eslint/parser": "^0.22.0",
    "@stylistic/eslint-plugin": "^1.5.0",
    "@stylistic/stylelint-plugin": "^2.0.0",
    "chai": "^4.3.10",
    "cross-env": "^7.0.3",
    "cspell": "^8.1.2",
    "eslint": "^8.55.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-css": "^0.8.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "markdownlint-cli2": "^0.11.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^35.0.0"
  }
}
