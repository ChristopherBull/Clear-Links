{
  "name": "clear-links-dev-tools",
  "version": "1.0.0",
  "description": "Dev tooling for the Clear Links browser extension",
  "author": "Christopher Bull",
  "type": "module",
  "scripts": {
    "build": "make",
    "lint": "npm run lint-md && npm run lint-css && npm run lint-src",
    "lint-css": "stylelint \"src/**/*.css\"",
    "lint-md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint-src": "eslint src test",
    "spell": "cspell README.md \"/src/*.*\"",
    "test": "npm run build && cross-env NODE_ENV=test mocha test/specs/**/*.test.js",
    "test-all": "npm run lint && npm run test-coverage && npm run spell && npm run test:e2e",
    "test-coverage": "npm run build && cross-env NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcovonly mocha test/specs/**/*.test.js",
    "test:e2e": "npx playwright test",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:start-server": "npx http-server ./test/test-sites",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@html-eslint/eslint-plugin": "^0.25.0",
    "@html-eslint/parser": "^0.25.0",
    "@playwright/test": "^1.44.1",
    "@stylistic/eslint-plugin": "^2.2.2",
    "@stylistic/stylelint-plugin": "^2.1.2",
    "cross-env": "^7.0.3",
    "cspell": "^8.8.4",
    "eslint": "^9.5.0",
    "eslint-plugin-css": "^0.10.0",
    "eslint-plugin-jsdoc": "^48.4.0",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint-plugin-sonarjs": "^1.0.3",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "markdownlint-cli2": "^0.13.0",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "semantic-release": "^24.0.0",
    "semantic-release-chrome": "^3.2.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1"
  }
}
