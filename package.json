{
  "name": "clear-links-dev-tools",
  "version": "1.0.0",
  "description": "Dev tooling for the Clear Links browser extension",
  "author": "Christopher Bull",
  "type": "module",
  "scripts": {
    "build": "make",
    "build:package:ff": "web-ext build --source-dir dist/firefox --overwrite-dest",
    "lint": "npm run lint:md && npm run lint:css && npm run lint:src && make build_ff_only && npm run lint:web-ext:ff",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\"",
    "lint:src": "eslint src test",
    "lint:web-ext:ff": "web-ext lint --source-dir ./dist/firefox/",
    "spell": "cspell .",
    "test": "npm run lint && npm run test:unit:coverage && npm run spell && npm run test:e2e",
    "test:unit": "npm run build && cross-env NODE_ENV=test mocha test/specs/**/*.test.js",
    "test:unit:coverage": "npm run build && cross-env NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcovonly mocha test/specs/**/*.test.js",
    "test:e2e": "npx playwright test",
    "test:e2e:prepare": "npx playwright install --with-deps chrome firefox",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:start-server": "npx http-server ./test/test-sites",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@html-eslint/eslint-plugin": "^0.26.0",
    "@html-eslint/parser": "^0.26.0",
    "@playwright/test": "^1.46.0",
    "@stylistic/eslint-plugin": "^2.7.2",
    "@stylistic/stylelint-plugin": "^3.0.1",
    "cross-env": "^7.0.3",
    "cspell": "^8.14.2",
    "eslint": "^9.10.0",
    "eslint-plugin-css": "^0.11.0",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-sonarjs": "^1.0.4",
    "http-server": "^14.1.1",
    "husky": "^9.1.5",
    "markdownlint-cli2": "^0.14.0",
    "mocha": "^10.7.3",
    "nyc": "^17.0.0",
    "semantic-release": "^24.1.0",
    "semantic-release-amo": "^1.3.1",
    "semantic-release-chrome": "^3.2.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "web-ext": "^8.2.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
