{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        // "plugin:sonarjs/recommended", // TODO renable and fix issues later
        "plugin:import/recommended",
        // "plugin:promise/recommended", // TODO renable and fix issues later
        // "plugin:jsdoc/recommended",// TODO renable and fix issues later
        "plugin:css/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@stylistic",
        // "sonarjs", // TODO renable and fix issues later
        "import",
        // "promise", // TODO renable and fix issues later
        // "jsdoc", // TODO renable and fix issues later
        "html",
        "css"
      ],
    "rules": {
        "@stylistic/indent": ["error", 2],
        "@stylistic/semi": ["error", "always"],
        "@stylistic/quotes": ["error", "single"],
        "no-var": "error",

        // TODO Update/enable these rules
        "comma-dangle": 0,
        "require-jsdoc": 0, // Temp disabled, but I like this rule
        "quotes": 0, // Temp, as I'm migrating to single quotes
        "new-cap": 0,

        // TODO Delete these rules
        "no-inner-declarations": 0, // Part of the ESlint recommended rules (plan to adhere to)
        // TEMP disbale until I migrate to ES Modules
        "no-undef": 0,
        "no-unused-vars": 0
    }
}
