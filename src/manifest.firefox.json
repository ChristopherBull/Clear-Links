{
    "manifest_version": 3,
    "name": "Clear Links",
    "version": "4.1.0",
	"author": "Christopher Bull",
    "description": "Makes website links more transparent and accessible, enhancing your awareness of your navigational security and privacy.",
	"browser_specific_settings": {
		"gecko": {
			"id": "{606f9f3d-1c71-463d-a1aa-d10cf1e4aa64}",
			"strict_min_version": "112.0"
		}
	},
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
	"permissions": [
		"scripting",
		"storage",
		"webNavigation"
	],
	"host_permissions": [
		"http://*/",
        "https://*/"
	],
	"web_accessible_resources": [
		{
		  "resources": [
			"images/*",
			"contentScript.css",
			"contentScript.js",
			"contentScriptSharedLib.js",
			"defaultSettings.js"
		  ],
		  "matches": [
			"<all_urls>"
		  ]
		}
	],
	"background": {
		"scripts": [ "background.js" ],
		"type": "module"
	},
	"options_ui": {
		"page": "options.html"
	},
	"content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "contentScriptActivationFilter.js" ],
			"run_at": "document_start"
        }
    ]
}
